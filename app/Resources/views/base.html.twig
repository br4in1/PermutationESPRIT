<!DOCTYPE html>

<head>
    <!-- Basic Page Needs
    ================================================== -->
    <title>{% block title %}Accueil{% endblock %} - Esprit Entraide</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/colors/main.css') }}">
    <link rel="shortcut icon" type="image/png" href="{{ asset('assets/favicon.png') }}"/>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-125013013-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-125013013-1');
    </script>
    {% block stylesheets %}{% endblock %}
</head>

<body>
<!-- Wrapper -->
<div id="wrapper">

    <!-- Header Container
    ================================================== -->
    <header id="header-container">

        <!-- Header -->
        <div id="header">
            <div class="container">

                <!-- Left Side Content -->
                <div class="left-side">

                    <!-- Logo -->
                    <div id="logo">
                        <a href="{{ path('index') }}"><img src="{{ asset('assets/images/logo.png') }}" alt=""></a>
                    </div>

                    <!-- Mobile Navigation -->
                    <div class="mmenu-trigger">
                        <button class="hamburger hamburger--collapse" type="button">
						<span class="hamburger-box">
							<span class="hamburger-inner"></span>
						</span>
                        </button>
                    </div>

                    <!-- Main Navigation -->
                    <nav id="navigation" class="style-1">
                        <ul id="responsive">

                            <li><a class="current--" href="{{ path('index') }}">Accueil</a></li>

                            <li><a href="#">Permutations</a>
                                <ul>
                                    <li><a href="{{ path('permutation_classes_index') }}">Entre classes</a></li>
                                </ul>
                            </li>

                            <li><a href="{{ path('colocations_index') }}">Colocations</a>
                            </li>

                            <li>
                                <a href="{{ path('covoiturage_index') }}">Covoiturages</a>
                            </li>
                            
                            <li><a href="#">Objets</a>
                                <ul>
                                    <li><a href="{{ path('objets_perdus_index') }}">Trouvés</a></li>
                                    <li><a href="{{ path('objets_perdus_index') }}">Perdus</a></li>
                                </ul>
                            </li>


                        </ul>
                    </nav>
                    <div class="clearfix"></div>
                    <!-- Main Navigation / End -->

                </div>
                <!-- Left Side Content / End -->

                {% if app.request.attributes.get('_route') != 'fos_user_security_login' and app.request.attributes.get('_route') != 'fos_user_registration_register' %}
                    <!-- Right Side Content / End -->
                    <div class="right-side">
                        <div class="header-widget">
                            {% if not is_granted("ROLE_USER") %}
                                <a href="#sign-in-dialog" class="sign-in popup-with-zoom-anim"><i class="sl sl-icon-lock-open"></i> Connexion</a>
                            {% else %}
                                <a class="sign-in" href="{{ path('fos_user_profile_show') }}"><strong>{{ app.user.firstname }}</strong></a> <a class="sign-in">|</a> <a class="sign-in" href="{{ path('fos_user_security_logout') }}"><i class="sl sl-icon-logout"></i></a>
                            {% endif %}
                            <!--<a href="dashboard-add-listing.html" class="button border with-icon">Add Listing <i class="sl sl-icon-plus"></i></a>-->
                        </div>
                    </div>
                    <!-- Right Side Content / End -->

                    <!-- Sign In Popup -->
                    {% if not is_granted("ROLE_USER") %}
                        <div id="sign-in-dialog" class="zoom-anim-dialog mfp-hide">

                            <div class="small-dialog-header">
                                <h3>Authentification</h3>
                            </div>

                            <!--Tabs -->
                            <div class="sign-in-form style-1">

                                <ul id="typical_tabs_nav" class="tabs-nav">
                                    <li class=""><a href="#tab1">Connexion</a></li>
                                    <li><a href="#tab2">Inscription</a></li>
                                </ul>

                                <div class="tabs-container alt">

                                    <!-- Login -->
                                    <div class="tab-content" id="tab1" style="display: none;">
                                        {{ include('@FOSUser/Security/login_content.html.twig') }}
                                    </div>

                                    <!-- Register -->
                                    <div class="tab-content" id="tab2" style="display: none;">
                                        {{ render(controller('AppBundle:Default:register',{'request' : app.request})) }}
                                    </div>

                                </div>
                            </div>
                        </div>
                    {% endif %}
                    <!-- Sign In Popup / End -->
                {% endif %}

            </div>
        </div>
        <!-- Header / End -->

    </header>
    <div class="clearfix"></div>
    <!-- Header Container / End -->

    {% block body %}{% endblock %}

    <!-- Footer
    ================================================== -->
    <div id="footer" class="dark">
        <!-- Main -->
        <div class="container">
            <div class="row">
                <div class="col-md-5 col-sm-6">
                    <img class="footer-logo" src="{{ asset('assets/images/logo2.png') }}" alt="">
                    <br><br>
                    <p>Esprit Entraide est une plateforme communautaire à Esprit.</p>
                </div>

                <div class="col-md-4 col-sm-6 ">




                </div>

                <div class="col-md-3  col-sm-12">
                    <h4>Contact Us</h4>
                    <div class="text-widget">
                        E-Mail:<span> <a href="#">contact@esprit-entraide.tn</a> </span><br>
                    </div>

                </div>

            </div>

            <!-- Copyright -->
            <div class="row">
                <div class="col-md-12">
                    <div class="copyrights">© 2018 Esprit-Entraide. All Rights Reserved.</div>
                </div>
            </div>

        </div>

    </div>
    <!-- Footer / End -->

    <!-- Back To Top Button -->
    <div id="backtotop"><a href="#"></a></div>

</div>
<!-- Wrapper / End -->



