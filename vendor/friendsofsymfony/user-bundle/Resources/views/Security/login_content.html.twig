{% trans_default_domain 'FOSUserBundle' %}

{% if error is defined and error %}
    <div class="notification error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" class="login" method="post">
    {% if csrf_token is defined and csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <p class="form-row form-row-wide">
        <label for="username">
            <i class="im im-icon-Male"></i>
            <input type="text" placeholder="{{ 'security.login.email'|trans }}"  class="input-text" name="_username" id="username" value="{% if last_username is defined and last_username %} {{ last_username }} {% endif %}" required="required" autocomplete="username" />
        </label>
    </p>

    <p class="form-row form-row-wide">
        <label for="password">
            <i class="im im-icon-Lock-2"></i>
            <input class="input-text" placeholder="{{ 'security.login.password'|trans }}" type="password" name="_password" id="password" required="required" autocomplete="current-password"/>
        </label>
        <span class="lost_password">
            <a href="{{ path('fos_user_resetting_request') }}" >{{ 'security.login.reset_password'|trans }}</a>
        </span>
    </p>

    <div class="form-row">
        <button type="submit" class="button border margin-top-5" name="login">{{ 'security.login.submit'|trans }}</button>
        <div class="checkboxes margin-top-10">
            <input id="remember_me" type="checkbox" name="_remember_me" value="on">
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
    </div>
</form>
