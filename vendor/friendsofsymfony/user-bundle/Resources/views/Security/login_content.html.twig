{% trans_default_domain 'FOSUserBundle' %}

{% if error is defined and error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token is defined and csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group">
        <input type="text" class="form-username form-control" placeholder="{{ 'security.login.email'|trans }}" id="username" name="_username" value="{% if last_username is defined and last_username %} {{ last_username }} {% endif %}" required="required" autocomplete="username" />
    </div>
    <div class="form-group">
        <input type="password" class="form-password form-control" placeholder="{{ 'security.login.password'|trans }}" id="password" name="_password" required="required" autocomplete="current-password" />
    </div>
    <div class="form-group">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
    </div>
</form>
