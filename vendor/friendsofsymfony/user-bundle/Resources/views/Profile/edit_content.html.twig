{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit register' } }) }}

    <p class="form-row form-row-wide">
        <label for="username2">
            <i class="im im-icon-Mail"></i>
            {{ form_widget(form.email) }}
            {% if form_errors(form.email) is not empty %}<div class="notification error closeable">{{ form_errors(form.email) }}</div>{% endif %}
        </label>
    </p>
    <p class="form-row form-row-wide">
        <label>
            <i class="im im-icon-Phone"></i>
            {{ form_widget(form.phone) }}
            {% if form_errors(form.phone) is not empty %}<div class="notification error closeable">{{ form_errors(form.phone) }}</div>{% endif %}
        </label>
    </p>
    <p class="form-row form-row-wide">
        <label>
            <i class="im im-icon-Book"></i>
            {{ form_widget(form.classe) }}
            <div class="notification warning closeable help-message" style="display:none;"></div>
            {% if form_errors(form.classe) is not empty %}<div class="notification error closeable">{{ form_errors(form.classe) }}</div>{% endif %}
        </label>
    </p>
    <p class="form-row form-row-wide">
        <label>
            <i class="im im-icon-Lock-2"></i>
            {{ form_widget(form.current_password) }}
            {% if form_errors(form.current_password) is not empty %}<div class="notification error closeable">{{ form_errors(form.current_password) }}</div>{% endif %}
        </label>
    </p>
    <div>
        <input type="submit" value="{{ 'profile.edit.submit'|trans }}" />
    </div>
{{ form_end(form) }}
